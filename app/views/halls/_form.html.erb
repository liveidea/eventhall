<%= form_for @hall do |f| %>
    <%= f.label :description, "Description" %> <br>
    <%= f.text_area :description %> <br>

    <%= f.label :price, "Price" %> <br>
    <%= f.number_field :price %>

    <%= f.file_field :photos %>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

