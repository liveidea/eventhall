
<h1>Listing Halls</h1>

<div class="row">
<% @halls.each do |hall| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag hall.photos.url %>
      <div class="caption text-center">
        <div class="hall-title">
          <h3><%= link_to truncate(hall.name, length: 15), hall %></h3>
        </div>

        <h5><%= hall.city.name if hall.city %></h5>
        <div id="price">
          <p>
            $ <%= hall.price %>
          </p>
        </div>
        <p><%#= truncate(hall.description, length: 60) %></p>
        <p>
          <%= link_to 'Edit', edit_hall_path(hall), class: "btn btn-warning" %>
        </p>
      </div>
    </div>
  </div>
  <% end -%>
</div>

<%= paginate @halls  %>

<br>

<%= link_to 'New Hall', new_hall_path, class: "btn btn-success" %>
