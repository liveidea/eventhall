<div class="hall-wrapper">
   <h3><%= @hall.name %></h3>
   $ <%= @hall.price %>  <br>
   <h5>Description: <%= @hall.description %></h5>  <br>
   City: <h5 class="label label-info"> <%= @hall.city.name if @hall.city.name %> <br></h5> <br><br>

   Venue Type:
   <% @hall.venue_types.each do |v| %>
      <h5 class="label label-info"> <%= v.name %> </h5>
   <% end %>  <br><br>

   Event Type:
    <% @hall.event_types.each do |e| %>
         <h5 class="label label-info"> <%= e.name %> </h5>
   <% end %> <br> <br>





   <%= image_tag @hall.photos_url if @hall.photos_url %> <br>

   <%= link_to 'Edit', edit_hall_path(@hall) %> |
   <%= link_to 'Back', halls_path %>
</div>

